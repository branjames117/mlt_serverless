<%- include('partials/header') %>
<main>
  <!-- business membership -->
  <section>
    <h2>
      Business Membership Form
    </h2>
    <div class="flex flex-col
          gap-0
          w-full
          bg-black bg-opacity-50
          pt-5
          pb-10
          px-1
          mx-auto
          text-center
          rounded-2xl">
      <div
        class="
          mb-12
          rounded-2xl
          p-3
          mx-auto
          xl:w-4/5
        "
      >
        <h3 class="text-xl text-yellow-500">Welcome Home!</h3>
        <p class="mb-3">Thank you for your support of local theatre!</p>
        <p class="mb-3">For all new memberships and membership renewals, please fill out the form below so we have your most up-to-date information.</p>
        <p class="mb-3">Your information is kept private. However, given permission below, your name will be listed on all printed programs for productions and on our website. Your email address and home address are used to reach out to you about auditions, upcoming productions, and events.</p>
        <p class="mb-3">Fields marked * are required.</p>

        <form class="px-8 pt-6 pb-8 mb-4" action="/api/membership-application" method="POST" id="membership-form">
          <input type="hidden" name="payerID" id="payerID" value="<%= PayerID %>" />
          <input type="hidden" name="type" id="type" value="Business" />
          <div class="mb-4">
            <label class="block text-sm font-bold mb-2" for="name">
              Full Name *
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required id="name" name="name" type="text" placeholder="Full Name" />
          </div>
          
          <div class="mb-4">
            <label class="block text-sm font-bold mb-2" for="businessName">
              Business Name *
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" required id="businessName" name="businessName" type="text" placeholder="MM/DD" />
          </div>

          <div class="mb-4">
            <label class="block text-sm font-bold mb-2" for="address">
              Business Address<br />(Street, City, State, ZIP) *
            </label>
            <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" required id="address" name="address" type="text" rows="3" maxlength="150" placeholder="Mailing Address"></textarea>
          </div>

          <div class="mb-4">
            <label class="block text-sm font-bold mb-2" for="phone">
              Best Contact Number *
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" required id="phone" name="phone" type="text" placeholder="Phone #" />
          </div>

          <div class="mb-4">
            <label class="block text-sm font-bold mb-2" for="email">
              Email Address *
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" required id="email" name="email" type="text" placeholder="Email Address" />
          </div>

          <div class="mb-4">
            <label class="block text-sm font-bold mb-2" for="referred">
              If you were referred, who referred you?
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="referred" name="referred" type="text" placeholder="" />
          </div>

          <div class="mb-4">
            <label class="block text-sm font-bold mb-2" for="consent">
              Do you give permission to have your name(s) listed on our website/on social media/in our program? *
            </label>
            <div class="flex flex-row gap-2 justify-center w-100">
              <div>
                <input type="radio" id="consent-yes" checked name="consent" value="Yes">
                <label for="consent-yes">Yes</label>
              </div>
              <div>
                <input type="radio" id="consent-no" name="consent" value="No">
                <label for="consent-no">No</label>
              </div>
            </div>
          </div>

          <div class="mb-4">
            <label class="block text-sm font-bold mb-2" for="listingPreference">
              If yes, how would you like to be listed?
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="listingPreference" name="listingPreference" type="text" placeholder="" />
          </div>

          <div class="flex items-center justify-between">
            <button type="submit">
              Submit
            </button>
            <span class="inline-block align-baseline font-bold text-sm text-yellow-500 hover:text-blue-800" href="#" id="clear-form">
              Clear Form
            </span>
          </div>
        </form>
      </div>
    </div>
  </section>
</main>

<%- include('partials/footer') %>
